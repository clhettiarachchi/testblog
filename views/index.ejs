<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    
    <div class="container">
      <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
      <h2>All Blogs</h2>

      <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
          <article>
            <a class="single" href="/blogs/<%= blog._id %>">
              <h3> <%= blog.title %> </h3>
            </a>
            <p> <%= blog.snippets %> </p>
          </article>
        <% }) %> 
      <% } else { %>
        <p>There are no blogs to display</p>
      <% } %>
    </div>

    <%- include('./partials/footer.ejs') %>
    </div>
  </body>
</html>
